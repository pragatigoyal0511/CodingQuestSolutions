
https://www.geeksforgeeks.org/problems/leaders-in-an-array-1587115620/1


class Solution {
    static ArrayList<Integer> leaders(int arr[]) {
        //  start from right, maintain greatest leader from right, if element i >= greatest leader till now than that will be included in ans list else it is not leader, it will 
// give us in o(n)
        
        int greatestLeaderTillNow = arr[arr.length-1];
        ArrayList<Integer> leadersList = new ArrayList<>();
        leadersList.add(greatestLeaderTillNow);
        
        for(int i=arr.length-2; i>=0; i--)
        {
            if(arr[i] >= greatestLeaderTillNow)
            {
                leadersList.add(arr[i]);
                greatestLeaderTillNow=arr[i];
            }
        }
        
        Collections.reverse(leadersList);
        
        return leadersList;
    }
}
